<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:layout_margin="8dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iconoImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_example"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Titulo del Consejo"
        android:textColor="#5C3366"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/iconoImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/subtituloTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subtítulo"
        app:layout_constraintTop_toBottomOf="@id/tituloTextView"
        app:layout_constraintStart_toStartOf="@id/tituloTextView"
        app:layout_constraintEnd_toEndOf="@id/tituloTextView" />

    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripción breve"
        app:layout_constraintTop_toBottomOf="@id/subtituloTextView"
        app:layout_constraintStart_toStartOf="@id/tituloTextView"
        app:layout_constraintEnd_toEndOf="@id/tituloTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
